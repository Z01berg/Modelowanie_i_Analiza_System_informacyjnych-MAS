<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Component Selection with List</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e0e0e0;
            margin: 0;
            height: 100vh;
            display: flex;
        }

        .sidebar {
            background-color: #ffffff;
            padding: 20px;
            width: 300px;
            border-right: 1px solid #ccc;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar h1,
        .sidebar h2,
        .sidebar button {
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #555;
        }

        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 14px;
            background-color: #f7f7f7;
            color: #333;
        }

        select:focus {
            border-color: #007bff;
            outline: none;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #5a6268;
        }

        .content {
            display: flex;
            flex-direction: column;
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }

        .iframe-container {
            flex: 1;
            overflow: hidden;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .list-display {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px 0;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background-color: #f0f0f0;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h1>Menu</h1>
        <h2>Select Filtering</h2>
        <form id="component-form">
            <div class="input-group">
                <label for="component1">Group</label>
                <select id="component1" name="component1">
                    <option value="componentA">Component A</option>
                    <option value="componentB">Component B</option>
                    <option value="componentC">Component C</option>
                </select>
            </div>
            <div class="input-group">
                <label for="component2">Dydaktyk</label>
                <select id="component2" name="component2">
                    <option value="componentD">Component D</option>
                    <option value="componentE">Component E</option>
                    <option value="componentF">Component F</option>
                </select>
            </div>
            <button type="submit">Submit</button>
            <br><br>
            <button onclick="window.location.href='/Authorization/logout'">Log out</button>
        </form>

        <div class="list-display">
            <h3>Selected Components</h3>
            <ul id="selected-components">
                <!-- List items will be inserted here by JavaScript -->
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="iframe-container">
            <iframe id="open-web-calendar"
                style="background:url('https://raw.githubusercontent.com/niccokunzmann/open-web-calendar/master/static/img/loaders/circular-loader.gif') center center no-repeat;"
                src="https://open-web-calendar.hosted.quelltext.eu/calendar.html?language=en"
                sandbox="allow-scripts allow-same-origin allow-top-navigation"
                allowTransparency="true" scrolling="no">
            </iframe>
        </div>
    </div>

    <script>
        document.getElementById('component-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const component1 = document.getElementById('component1').value;
            const component2 = document.getElementById('component2').value;

            const list = document.getElementById('selected-components');
            list.innerHTML = `<li>${component1}</li><li>${component2}</li>`;
        });
    </script>
</body>

</html>
